<%= form_with url: main_view_path, method: :get, local: true, class: "d-flex align-items-center gap-2 mb-3 mt-2" do |f| %>
  <%= f.select :category, options_for_select([['First Name', 'first_name'], ['Last Name', 'last_name'], ['Species', 'species'],['Weapon', 'weapon'],['Vehicle', 'vehicle'],['Affiliations', 'affiliations'],['Locations', 'locations']], params[:category]),
        {}, 
        class: "form-select w-auto" %>

  <%= f.search_field :query, value: params[:query], placeholder: "Search...", class: "form-control" %>
  <%= hidden_field_tag 'page', 1 %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
