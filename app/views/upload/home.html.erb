<div class="container mt-5">
  <h2>Upload a File</h2>

  <%= form_with url: upload_path, local: true, html: { multipart: true } do |form| %>
    <div class="mb-3">
      <%= form.label :file, "Choose file", class: "form-label" %>
      <%= form.file_field :file, class: "form-control" %>
    </div>
    <%= form.submit "Upload", class: "btn btn-primary" %>
  <% end %>
</div>
